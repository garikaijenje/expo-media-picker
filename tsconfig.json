{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noEmit": false, // create files in dist folder
    "noUnusedLocals": false,
    "baseUrl": ".",
    "declaration": false,
    "module": "es2015",
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "strict": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
